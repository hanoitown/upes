                @Html.EditorFor(model => model.Exam.Name)
                @Html.ValidationMessageFor(model => model.Exam.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Exam.Sequence, new { @class = "control-label col-md-2" })
